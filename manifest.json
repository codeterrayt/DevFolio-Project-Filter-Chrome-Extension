{
  "manifest_version": 3,
  "name": "Devfolio Project Filter",
  "version": "1.0",
  "description": "Fetch, filter projects from Devfolio, easy to browse, sort, and discover inspiring projects by criteria like views and likes.",
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": ["https://*.devfolio.co/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
